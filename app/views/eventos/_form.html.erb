<%= form_for(@evento)  do |f| %>
  <% if @evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h2>

      <ul>
      <% @evento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="form-group">
    <%= f.label :descricao, "Descrição" %><br>
    <%= f.text_field :descricao, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :tipoEvento, "Tipo de Evento" %><br>
    <%= f.select :tipoEvento, options_for_select([['Casamento'], ['Empresa'], ['Outros']]),{}, { :class => 'form-control m-b' }  %>
</div>
<div class="form-group">
    <%= f.label :localEvento, "Local" %><br>
    <%= f.select :localEvento, options_for_select([['Quinta da Concha'], ['Outro']]),{}, { :class => 'form-control m-b' }  %>
</div>


<div class="form-group">
    <%= f.label :dataInicio, "Data" %><br>
    <div class="input-group date" data-provide="datepicker">
      <div class="input-group-addon">
          <span class="glyphicon glyphicon-th"></span>
      </div>
        <%= f.text_field :dataInicio, class: 'form-control' %>
    </div>

</div>


<div class="form-group">
    <%= f.label :horaInicio, "Hora Início" %><br>
    <div class="input-group clockpicker" data-placement="top" data-align="top" data-autoclose="true">
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-time"></span>
    </span>
    <%= f.text_field :horaInicio, class: 'form-control'  %>
</div>
<script type="text/javascript">
$('.clockpicker').clockpicker();
</script>

</div>
<div class="form-group">
    <%= f.label :horaFim, "Hora Fim" %><br>
    <div class="input-group clockpicker" data-placement="top" data-align="top" data-autoclose="true">
    <span class="input-group-addon">
        <span class="glyphicon glyphicon-time"></span>
    </span>
    <%= f.text_field :horaFim, class: 'form-control' %>
</div>
<script type="text/javascript">
$('.clockpicker').clockpicker();
</script>
<div class="form-group">
    <%= f.label :numPessoas, "Número de Pessoas" %><br>
    <%= f.number_field :numPessoas, class: 'form-control'  %>
</div>
<div class="form-group">
    <%= f.label :precoPorPessoa, "Preço por pessoa" %><br>
    <%= f.text_field :precoPorPessoa, class: 'form-control' %>
</div>
<div class="form-group">
  <div class="actions">
    <%= f.submit 'Guardar', data: { no_turbolink: true }, class: 'btn btn-w-m btn-primary'  %>
    <%= link_to 'Voltar', eventos_path, data: { no_turbolink: true }, class: 'btn btn-w-m btn-danger'  %>
  </div>
<% end %>
