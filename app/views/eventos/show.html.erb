<div class="row wrapper white-bg page-heading">
  <div class="col-lg-12">
    <h2>Evento</h2>
  </div>
</div>
<div class = "row wrapper white-bg">
<div class="col-lg-12">
  <div class="ibox-content text-left p-md">

<p id="notice" style="color:red;"><%= notice %></p>

<p>
  <strong>Descrição:</strong>
  <%= @evento.descricao %>
</p>
<p>
  <strong>Tipo de Evento:</strong>
  <%= @evento.tipoEvento %>
&nbsp;&nbsp;
  <strong>Local do Evento:</strong>
  <%= @evento.localEvento %>
</p>
<p>
  <strong>Data de Início:</strong>
  <%= @evento.dataInicioFormatted %>&nbsp;&nbsp;
  <strong>Data de Fim:</strong>
  <%= @evento.dataFimFormatted %>
</p>
<p>
  <strong>Número de pessoas:</strong>
  <%= @evento.numPessoas %>&nbsp;&nbsp;
  <strong>Preço P/pax:</strong>
  <%= @evento.precoPorPessoa %>
</p>

<%= link_to 'Editar', edit_evento_path(@evento), data: { no_turbolink: true }, class: 'btn btn-info btn-sm'  %>
<%= link_to 'Voltar', eventos_path , data: { no_turbolink: true }, class: 'btn btn-danger btn-sm' %>
</div>
</div>
</div>

<div class = "row wrapper border-bottom white-bg">
<div class="ibox-content text-left p-md">

</div>


</div>
