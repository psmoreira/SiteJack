<div class="row wrapper border-bottom white-bg" >
  <div class="row wrapper white-bg">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= link_to 'Novo Evento', new_evento_path, data: { no_turbolink: true }, class: 'btn btn-w-m btn-primary'  %>
        </div>

      </div>
    </div>
  </div>
  <div class="row wrapper border-bottom white-bg">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover  dataTable" id="eventos-table", data-source="<%= eventos_path(format: :json) %>">
            <thead>
              <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Data</th>
                <th>Tipo</th>
                <th>Local</th>
                <th>Número de pessoas</th>
                <th>Opções</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
